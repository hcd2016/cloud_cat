<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item android:id="@android:id/background"
        android:drawable="@drawable/shape_gray_f4_c3">
    </item>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress" android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <clip>
            <shape>
               <solid android:color="@color/red_554"/>
                <corners android:radius="3dp"/>
            </shape>
        </clip>
    </item>
</layer-list>