<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <include layout="@layout/line_gray" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.vpfinace.cloud_cat.weight.MyRadioButton
            android:id="@+id/rb_1"
            style="@style/main_rb_item"
            android:text="首页"
            app:rbDrawableTop="@drawable/selector_menu_1" />

        <com.vpfinace.cloud_cat.weight.MyRadioButton
            android:id="@+id/rb_2"
            style="@style/main_rb_item"
            android:text="猫舍"
            app:rbDrawableTop="@drawable/selector_menu_2" />

        <com.vpfinace.cloud_cat.weight.MyRadioButton
            android:id="@+id/rb_3"
            style="@style/main_rb_item"
            android:text="我的"
            app:rbDrawableTop="@drawable/selector_menu_3" />
    </RadioGroup>
</LinearLayout>