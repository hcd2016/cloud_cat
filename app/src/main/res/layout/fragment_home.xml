<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_alignParentBottom="true"
                    android:id="@+id/v_white"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/home_bg"
                    android:layout_above="@+id/v_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_status_view"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 1级 纸盒猫窝"
                            android:textColor="@color/black_426"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <RelativeLayout
                            android:id="@+id/rl_get_money_container"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/homepage_icon_cookies" />

                            <TextView
                                android:id="@+id/tv_get"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/shape_orange_c00_c3"
                                android:paddingLeft="6dp"
                                android:paddingTop="1dp"
                                android:paddingRight="6dp"
                                android:paddingBottom="1dp"
                                android:text="领取"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                            <TextView
                                android:id="@+id/tv_get_time"
                                android:visibility="gone"
                                android:paddingLeft="6dp"
                                android:paddingTop="1dp"
                                android:paddingRight="6dp"
                                android:paddingBottom="1dp"
                                android:background="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="0dp"
                                android:text="59:59"
                                android:textColor="@color/black_426"
                                android:textSize="10sp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_lucky_wheel"
                            android:layout_width="40dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/homepage_icon_turntable" />

                        <ImageView
                            android:id="@+id/iv_top"
                            android:layout_width="40dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/homepage_icon_list" />

                        <ImageView
                            android:id="@+id/iv_how_to_play"
                            android:layout_width="40dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/homepage_icon_rule" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dividends_cat_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/shape_orange_c20_c22"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="4dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分红喵今日收益"
                            android:textColor="@color/white_6f8"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥"
                                android:textColor="@color/white_6f8"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_dividends_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="162.83"
                                android:textColor="@color/white_6f8"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:id="@+id/ll_del_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="53dp"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <RelativeLayout
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="4dp">

                            <LinearLayout
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/shape_orange_a19_c8"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="4dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="4dp">

                                <TextView
                                    android:clipToPadding="false"
                                    android:paddingLeft="32dp"
                                    android:clipChildren="false"
                                    android:id="@+id/tv_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="21188"
                                    android:textColor="@color/orange_900"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_out_put"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="43dp"
                                    android:text="56/s"
                                    android:textColor="@color/orange_900"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/homepage_icon_cookies_02" />

                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/iv_shop"
                            android:layout_width="54dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/store" />

                        <ImageView
                            android:id="@+id/iv_del"
                            android:layout_width="29dp"
                            android:layout_height="56dp"
                            android:src="@drawable/homepage_icon_recycle" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:overScrollMode="never" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_gray_ff2_c23"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/ll_pic_guide_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="14dp"
                        android:src="@drawable/home_page_icon_handbook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="图鉴"
                        android:textColor="@color/black_426"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_cat_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_red_8e_04_c22"
                    android:orientation="horizontal"
                    android:paddingLeft="74dp"
                    android:paddingTop="12dp"
                    android:paddingRight="36dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/homepage_icon_cookies_02" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_store_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="14dp"
                        android:src="@drawable/home_page_icon_warehouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="仓库"
                        android:textColor="@color/black_426"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cat_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="100dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_cat_img"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/homepage_popup_cat" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv.1"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>