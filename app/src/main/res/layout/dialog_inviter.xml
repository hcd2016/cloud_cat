<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_c10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/fl_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="你的邀请人"
            android:textColor="#ff232426"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/popup_icon_close" />
        </FrameLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_code"
        android:textColor="@color/black_426"
        android:layout_marginTop="84dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textColorHint="@color/black_9"
        android:hint="输入邀请码"
        android:layout_marginRight="73dp"
        android:layout_marginLeft="73dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginRight="73dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_6e6"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:layout_marginTop="46dp"
        android:id="@+id/btn_commit"
        style="@style/style_btn_red_8e40_gray_f4_c23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="提交"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐邀请人"
        android:textColor="#ff303a62"
        android:textSize="12sp"
        />
</LinearLayout>