<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="452dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_white_c10">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/homepage_popup_icon_close_gray" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/turntable_bg" />

            <ImageView
                android:id="@+id/iv_wheel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/turntable_prize" />

            <ImageView
                android:id="@+id/iv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="95dp"
                android:src="@drawable/turntable_button" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_quan_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="16dp"
                        android:src="@drawable/turntable_ticket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="转盘券 ×"
                        android:textColor="@color/black_426"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_voucher_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="10"
                        android:textColor="@color/black_426"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_quan_container"
                    android:layout_centerHorizontal="true"
                    android:text="消耗完每天凌晨赠送5张转盘券"
                    android:textColor="@color/black_6"
                    android:textSize="12sp" />

                <TextView
                    android:paddingRight="12dp"
                    android:id="@+id/tv_btn_get_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_orange_020_half_c100"
                    android:paddingLeft="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="+ 领券"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
                <TextView
                    android:visibility="gone"
                    android:paddingRight="12dp"
                    android:id="@+id/tv_btn_get_quan_unenable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_gray_4f4_half_c100"
                    android:paddingLeft="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="+ 领券"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_btn_start"
            style="@style/style_btn_red_8e40_gray_f4_c23"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp"
            android:enabled="true"
            android:gravity="center"
            android:paddingLeft="111dp"
            android:paddingRight="111dp"
            android:text="开始" />
    </LinearLayout>


</RelativeLayout>